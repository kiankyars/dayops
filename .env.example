# Audio source
VOICE_MEMOS_DIR=/absolute/path/to/voice-memos
PLAN_TEMPLATE_PATH=./plan.md

# DayOps state
DAYOPS_STATE_DIR=.dayops_state
DAYOPS_SNAPSHOT_DIR=.dayops_state/snapshots

# LLM routing
MODEL_PROVIDER=google
MODEL_NAME=gemini-3-flash-preview

# STT routing
STT_PROVIDER=gemini
GEMINI_STT_MODEL=gemini-3-flash-preview
VENICE_STT_MODEL=nvidia/parakeet-tdt-0.6b-v3

# Google Calendar
GOOGLE_CALENDAR_ID=primary
GOOGLE_OAUTH_TOKEN_PATH=/absolute/path/to/google_oauth_token.json

# Provider auth
GEMINI_API_KEY=
GEMINI_OPENAI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# Strava (required)
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
STRAVA_REFRESH_TOKEN=

# Venice
VENICE_INFERENCE_KEY=
VENICE_BASE_URL=https://api.venice.ai/api/v1

# Runtime
TIMEZONE=America/Los_Angeles
AUTO_APPLY=true
TRASH_PROCESSED_MEMOS=true
HYDRATE_MAX_RETRIES=6
HYDRATE_RETRY_SECONDS=1.5
